<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_mainscreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@mipmap/mainpage"/>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"

        android:layout_marginRight="15dp"


        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Enter the total amount of loan:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/editText2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:layout_below="@+id/textView2"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"

            >

            <Button
                android:id="@+id/resetbut2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@mipmap/erase"

                />
        </FrameLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1"
            android:text="Enter the Interest %:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Enter number of dues:"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/editText2"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:layout_below="@+id/textView1"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textSize="30sp" >

            <requestFocus />

        </EditText>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"

            >

            <Button
                android:id="@+id/resetbut1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@mipmap/erase"

                android:clickable="false" />
        </FrameLayout>



        <EditText
            android:id="@+id/editText3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:layout_below="@+id/textView3"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"

            >

            <Button
                android:id="@+id/resetbut3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@mipmap/erase"

                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText3" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_x="104dp"
                    android:layout_y="197dp"
                    android:text="Amt/Due"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="#00aeef"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#00aeef"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_gravity="bottom|center"
                    android:background="@drawable/btn_toggle_holo_dark"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>






</FrameLayout>